# elabFTW MCP Server Configuration
# Copy this file to .env and fill in your values

# Base URL for the elabFTW API (without trailing slash)
# Example: https://your-server.com:3148/api/v2
ELABFTW_API_URL=https://your-server.example.com:3148/api/v2

# Your elabFTW API Key
# Generate this in elabFTW: User Menu -> User Panel -> API Keys
ELABFTW_API_KEY=your-api-key-here

# SSL Certificate Verification
# Set to "true" for production with valid certificates
# Set to "false" for self-signed certificates (common in lab setups)
ELABFTW_VERIFY_SSL=false
